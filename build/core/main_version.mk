# Versioning System
# Skydragon version.
PRODUCT_VERSION_MAJOR = $(PLATFORM_VERSION)
PRODUCT_VERSION_MINOR = build
PRODUCT_VERSION_MAINTENANCE = 0.1
ifdef SKYDRAGON_BUILD_EXTRA
    SKYDRAGON_POSTFIX := -$(SKYDRAGON_BUILD_EXTRA)
endif
ifndef SKYDRAGON_BUILD_TYPE
    SKYDRAGON_BUILD_TYPE := UNOFFICIAL
endif

ifeq ($(SKYDRAGON_BUILD_TYPE),DM)
    SKYDRAGON_POSTFIX := -$(shell date +"%Y%m%d")
endif

ifndef SKYDRAGON_POSTFIX
    SKYDRAGON_POSTFIX := -$(shell date +"%Y%m%d-%H%M")
endif

SKYDRAGON_VERSION := 10.0
SKYDRAGON_MOD_VERSION := Skydragon-$(SKYDRAGON_BUILD)-$(PRODUCT_VERSION_MAJOR).$(PRODUCT_VERSION_MINOR).$(PRODUCT_VERSION_MAINTENANCE)-$(SKYDRAGON_BUILD_TYPE)$(SKYDRAGON_POSTFIX)

PRODUCT_SYSTEM_DEFAULT_PROPERTIES += \
    BUILD_DISPLAY_ID=$(BUILD_ID) \
    skydragon.ota.version=$(PRODUCT_VERSION_MAJOR).$(PRODUCT_VERSION_MINOR).$(PRODUCT_VERSION_MAINTENANCE) \
    ro.skydragon.version=$(SKYDRAGON_VERSION) \
    ro.modversion=$(SKYDRAGON_MOD_VERSION) \
    ro.skydragon.buildtype=$(SKYDRAGON_BUILD_TYPE)

PRODUCT_PROPERTY_OVERRIDES += \
    ro.skydragon.version=$(SKYDRAGON_VERSION) \
